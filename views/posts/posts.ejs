<%- include('../templates/header.ejs') %>
<%- include('../templates/navbar.ejs') %>

<div class="container-lg mt-3">
    <div class="row">

        <!-- left panel  -->
        <div class="col-md-3">
            <div class="container containerborder">
                <img class="img-fluid profile-pic" src="/userImages/<%= user.userimage %>" alt="">
                <% if (user) { %>
                    <p><%= user.name %></p>
                  <% } else { %>
                    <p>Welcome guest!</p>
                <% } %>
                <p><i class="fa-solid fa-address-card"></i> Profile</p>
                <p><i class="fa-solid fa-bell"></i> Notifications</p>
                <p><i class="fa-sharp fa-solid fa-message"></i> Messages</p>
                <p><i class="fa-solid fa-group-arrows-rotate"></i> Groups</p>
                <p><i class="fa-solid fa-network-wired"></i> Network</p>
                <form class="form-group" action="/logout" method="POST">
                    <button class="btn btn-dark btn-sm">logout</button>
                </form>
            </div>
        </div>

        <!-- center panel  -->
        <div class="col-md-6">
            <div class="container containerborder">
                <div class="row">
                    <div class="col-md-2">
                        <img class="img-fluid statusProfile" src="/userImages/<%= user.userimage %>" alt="">
                    </div>
                    <div class="col-md-10">
                        <!-- Button trigger modal -->
                        <input class="form-control" data-bs-toggle="modal" data-bs-target="#exampleModal" placeholder="Whats on your mind?"></input>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img class="img-fluid post-pic" src="/userImages/<%= user.userimage %>" alt="">
                                        </div>
                                        <div class="col-md-9">
                                            <p style="font-size: 0.8rem;"><%= user.name %></p>
                                            <p style="font-size: 0.8rem; margin-top: -1rem;">Whats on your mind</p>
                                        </div>
                                    </div>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <!-- form for adding post  -->
                                    <form class="form-group" action="/post" method="POST" enctype="multipart/form-data">
                                        <textarea class="form-control" name="post" id="" cols="10" rows="10"></textarea>
                                        <input class="form-control mt-2" type="file" name="postimage">
                                        <input type="hidden" name="userid" value="<%= user._id %>">
                                        <button class="btn btn-dark btn-sm mt-2">Post</button>
                                    </form>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <% if(posts) { %>
                    <% for(post of posts) { %>
                        <hr>
                        <div class="container containerborder mt-3">
                            <div class="row">
                                <div class="col-md-2">
                                    <img class="img-fluid post-pic" src="/userImages/<%= user.userimage %>" alt="">
                                </div>
                                <div class="col-md-10">
                                    <p style="font-size: 0.7rem;"><%= post.users[0].name %></p>
                                    <p style="font-size: 0.7rem; margin-top: -1rem;"><%= post.createdAt %></p>
                                </div>
                            </div>
                        <div id="postTextContainer">
                            <p class=""><%= post.post %></p>
                        </div>
                        <p id="seeMoreBtn" onclick="toggleText()" style="display:none; color: grey; cursor: pointer;">...See More</p>  
                        <img class="img-fluid mb-3" src="/postsImages/<%= post.postimage %>" alt="">
                        <div class="row">
                            <div class="col-md-3" style="color: grey; font-size: 0.7rem;">likes: <%= post.likes.length %></div>
                            <div class="col-md-3" style="color: grey; font-size: 0.7rem;">dislikes: <%= post.dislikes.length %></div>
                            <div class="col-md-3" style="color: grey; font-size: 0.7rem;">comments</div>
                            <div class="col-md-3" style="color: grey; font-size: 0.7rem;">reposts</div>
                        </div>
                        <hr>
                        <div class="row">
                            <!-- forms for like, dislike, comment and reost  -->
                            <div class="col-md-3" style="">
                                <form class="form-group" id="formlikes" action="/likes" method="POST">
                                    <input type="hidden" name="postId" value="<%= post._id %>">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button class="btn btn-sm btn-dark"><i class="fa-solid fa-thumbs-up"></i> Like</button>
                                </form>
                            </div>
                            <div class="col-md-3" style="">
                                <form class="form-group" id="formlikes" action="/dislikes" method="POST">
                                    <input type="hidden" name="postId" value="<%= post._id %>">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button class="btn btn-sm btn-dark"><i class="fa-solid fa-thumbs-down"></i> Dislike</button>
                                </form>
                            </div>
                            <div class="col-md-3" style="">
                                <button class="btn btn-sm btn-dark" id="comment-btn"><i class="fa-solid fa-thumbs-down"></i> Comment</button>

                                <!-- <form class="form-group" id="formlikes" action="/comments" method="POST">
                                    <input type="hidden" name="postId" value="<%= post._id %>">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button class="btn btn-sm btn-dark"><i class="fa-solid fa-thumbs-down"></i> Comments</button>
                                </form> -->
                            </div>
                            <div class="col-md-3" style="">
                                <form class="form-group" id="formlikes" action="/repost" method="POST">
                                    <input type="hidden" name="postId" value="<%= post._id %>">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button class="btn btn-sm btn-dark"><i class="fa-solid fa-thumbs-down"></i> Repost</button>
                                </form>
                            </div>
                        </div>
                        <div class="mt-3" id="comment-box" style="display: none;">
                            <div class="row">
                                <div class="col-md-2">
                                    <img class="img-fluid post-pic" src="/userImages/<%= user.userimage %>" alt="">
                                </div>
                                <div class="col-md-10">
                                    <form class="form-group" action="/comment" method="POST">
                                        <input type="hidden" name="commentuserid" value="<%= user._id %>">
                                        <input type="hidden" name="postid" value="<%= post._id %>">
                                        <textarea placeholder="Post your comment" class="form-control" name="comment" id="" cols="30" rows="2"></textarea>
                                        <button class="btn btn-dark btn-sm mt-2">Comment</button>
                                    </form>
                                </div>
                            </div>
                            <% if (post.comments.length > 0) { %>
                                <% for (comment of post.comments) { %>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <p><%= comment.user.name %></p>
                                        </div>
                                        <div class="col-md-10">
                                            <p><%= comment.comment %></p>
                                            <p><%= comment.createdAt %></p>
                                        </div>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <p>No comments yet.</p>
                            <% } %>                            
                        </div>
                        <hr>
                        </div>
                    <% } %>
                <% } else { %>
                    <p>Zero posts add a Post</p>
                <% } %>
        </div>

        <!-- right panel  -->
        <div class="col-md-3">
            <div class="container containerborder">
                <h1>Testing</h1>
            </div>
        </div>

    </div>
</div>

<script>

    const commentBtn = document.getElementById("comment-btn");
    const commentBox = document.getElementById("comment-box");

    commentBtn.addEventListener("click", () => {
    if (commentBox.style.display === "none") {
        commentBox.style.display = "block";
    } else {
        commentBox.style.display = "none";
    }
    });


    function toggleText() {
        var textContainer = document.getElementById("postTextContainer");
        var p = document.getElementById("seeMoreBtn");
    
        if (textContainer.classList.contains("show")) {
        textContainer.classList.remove("show");
        p.innerHTML = "...See More";
        } else {
        textContainer.classList.add("show");
        p.innerHTML = "...See Less";
        }
    }
    
    // Count the number of words in the text
    var text = document.getElementById("postTextContainer").textContent.trim();
    var wordCount = text.split(" ").length;
    
    // Show the "See More" button if the word count exceeds 20
    if (wordCount > 20) {
        var button = document.getElementById("seeMoreBtn");
        button.style.display = "block";
    }
    </script>
    
    <style>
    #postTextContainer {
        overflow: hidden;
        height: 4.5rem;
    }
    
    #postTextContainer.show {
        height: auto;
    }
    
    #seeMoreBtn {
        display: block;
        margin-top: 10px;
    }
    </style>
<%- include('../templates/footer.ejs') %>